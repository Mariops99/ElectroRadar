<div id="map"></div>

<style>

  @import 'leaflet/dist/leaflet.css';

  #map {
    height: 100dvh;
  }
</style>

<script>
  import leaFlet from "leaflet";

  const map = leaFlet.map('map').setView([40.416908437891306, -3.7041708138023304], 14);
  leaFlet.tileLayer("https://a.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png").addTo(map);

  /** Cambiamos el iconito de la marca del mapa
   * LEER https://rstudio.github.io/leaflet/articles/markers.html PARA AGRUPAR LAS MARCAS SI HAY MUCHOS CARGADORES EN UN SITIO
    var greenIcon = leaFlet.icon({
    iconUrl: 'leaf-green.png',
    shadowUrl: 'leaf-shadow.png',

    iconSize:     [38, 95], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
    })
  */

  leaFlet.marker([40.471565, -3.697116])
  .addTo(map)
  .bindPopup(`<b>Ahorramás Emilia</b>
  <br />24x7 horas<br />
  <br /> EDP CLIENTES SAU <br />
  <br />Emilia 46, Madrid 28029`)
   .openPopup(); //Por defecto está abierto el popup con openPopup() Si está activo por defecto el mapa hace zoom a la marca con .openPopup()
</script>
